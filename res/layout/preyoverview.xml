<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/snmsActionBar"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="32dp"
        android:background="@color/snmsActionBar"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <ImageButton
            android:id="@+id/prey_prev_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/ic_left_arrow" />

        <TextView
            android:id="@+id/prey_current_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_weight="0.60"
            android:background="@drawable/datepickerbg"
            android:gravity="center"
            android:text="Onsdag 3"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="16dp" >
        </TextView>

        <ImageButton
            android:id="@+id/prey_next_day"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="0.20"
            android:background="@drawable/snmsbutton"
            android:src="@drawable/ic_right_arrow" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_margin="0dp"
        android:background="@drawable/border_header_pray"
        android:orientation="horizontal"
        android:weightSum="1.0" >

        <TextView
            android:id="@+id/header_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".4"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="Bønn"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/status"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="center_vertical"
            android:text="Tid igjen"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />

        <TextView
            android:id="@+id/prey_alarm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".2"
            android:gravity="right|center_vertical"
            android:paddingRight="5dp"
            android:text="Alarm"
            android:textAppearance="@android:style/TextAppearance.Medium"
            android:textColor="@color/white"
            android:textSize="14dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/preyRowContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>



    <LinearLayout
        android:id="@+id/shortCutContainer"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@color/snmsDarkBlue"
        android:orientation="vertical"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/list_padding"
        android:paddingRight="@dimen/list_padding"
        android:paddingTop="8dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/monthlyCalenderShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_calendar"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Månedstabell"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" >
            </Button>

            <Button
                android:id="@+id/halalEShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_enr"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="E-nr database"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

            <Button
                android:id="@+id/halalDonationShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_halal"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:text="Produkt og prod."
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" >
            </Button>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/hijriShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_hijri"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Hijri"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

            <Button
                android:id="@+id/moskShortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_mosque"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Moskeer"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

            <Button
                android:id="@+id/butogSerShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_shop"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Butikk og serv."
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/snmsDarkBlue"
            android:orientation="horizontal"
            android:weightSum="1.0" >

            <Button
                android:id="@+id/qiblaShortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginTop="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_qibla"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Qibla"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

            <Button
                android:id="@+id/aboutShortcut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_irn"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Om IRN"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

            <Button
                android:id="@+id/settingsShortCut"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="3dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="0.333"
                android:background="@drawable/shortcutbutton"
                android:drawablePadding="0sp"
                android:drawableTop="@drawable/ic_settings"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:text="Innstillinger"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/snms_text_button" />

        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>